<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_add_type"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="@string/add_type"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_manageType"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:hint="@string/edit_manageType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_add_type"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list_view_type"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:layout_margin="5dp"
        android:divider="#00000000"
        android:dividerHeight="1dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_manageType">

    </ListView>

</android.support.constraint.ConstraintLayout>